#include "../ft_printf.h"

static int	ft_print_hexadecimal(unsigned int x, const char *base)
{
	char	string[9];
	int		i;
	int		length;
	int		char_count;

	i = 0;
	length = 0;
	while (x != 0)
	{
		string[i] = base[x % 16];
		i++;
		x = x / 16;
	}
	while (i--)
	{
		char_count = ft_putchar_fd(string[i], 1);
		if (char_count < 0)
			return (-1);
		length = length + char_count;
	}
	return (length);
}

int	ft_hexadecimal(unsigned int x, char format)
{
	const char	*base;
	int			char_count;

	if (format == 'X')
		base = "0123456789ABCDEF";
	else
		base = "0123456789abcdef";
	if (x == 0)
		return (ft_putchar_fd('0', 1));
	char_count = ft_print_hexadecimal(x, base);
	if (char_count < 0)
		return (-1);
	return (char_count);
}
